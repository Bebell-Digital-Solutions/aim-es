    <script>
        // Helper to update UI status
        function updateStatus(message, isLoading = true) {
            const statusIndicator = document.getElementById('status-indicator');
            const statusText = document.getElementById('status-text');
            
            if (message) {
                statusText.textContent = message;
                statusText.classList.remove('hidden');
            } else {
                statusText.classList.add('hidden');
            }

            if (isLoading) {
                statusIndicator.classList.remove('hidden');
            } else {
                statusIndicator.classList.add('hidden');
            }
        }

        async function compileLaTeX(code) {
             // We use a POST request via fetch to avoid URL length limits
            const formData = new URLSearchParams();
            formData.append('text', code);

            const response = await fetch('https://latexonline.cc/compile?command=xelatex', {
                method: 'POST',
                body: formData
            });
            
            return response;
        }

        async function renderPDF() {
            let code = document.getElementById('latex-input').value;
            const initialMessage = document.getElementById('initial-message');
            const pdfFrame = document.getElementById('pdf-frame');
            const downloadBtn = document.getElementById('download-btn');

            // 1. Sanitize Input: Remove invisible non-breaking spaces that crash compilers
            // Replace NBSP (\u00A0) and Zero-Width Space (\u200B) with regular space
            code = code.replace(/[\u00A0\u200B]/g, ' ');

            // Show Loading
            updateStatus("Compiling...", true);
            initialMessage.classList.add('hidden');
            pdfFrame.classList.add('hidden'); 
            
            try {
                let response = await compileLaTeX(code);

                // 2. Smart Retry: Handle Font Errors
                if (!response.ok) {
                    const errorText = await response.text();
                    
                    // Check if error is related to Noto Sans or missing fonts
                    if (errorText.includes("font") && (code.includes("Noto Sans") || code.includes("NotoSans"))) {
                        console.warn("Noto Sans not found on server. Retrying with Latin Modern Sans.");
                        updateStatus("Font missing. Retrying with Standard Font...", true);
                        
                        // Replace unsafe font with safe standard font
                        code = code.replace(/Noto Sans/g, "Latin Modern Sans");
                        code = code.replace(/NotoSans/g, "Latin Modern Sans");
                        
                        // Retry compilation
                        response = await compileLaTeX(code);
                    } 
                    
                    // If still failing, throw original or new error
                    if (!response.ok) {
                         // If we didn't retry, or retry failed, use the error text we have
                         const finalError = errorText || await response.text();
                         throw new Error("Server Error or Compilation Failed.\n\n" + finalError.slice(0, 400) + "...");
                    }
                }

                // Success!
                updateStatus("Rendering complete!", false);
                setTimeout(() => updateStatus("", false), 2000);

                // Convert response to a Blob (file-like object)
                const blob = await response.blob();
                const url = URL.createObjectURL(blob);

                // Update Iframe
                pdfFrame.src = url;
                pdfFrame.classList.remove('hidden');

                // Update Download Button
                downloadBtn.href = url;
                downloadBtn.classList.remove('opacity-50', 'pointer-events-none');
                
            } catch (error) {
                console.error(error);
                updateStatus("", false);
                alert("Rendering Failed.\n\n" + error.message);
                initialMessage.classList.remove('hidden');
            } 
        }
    </script>
